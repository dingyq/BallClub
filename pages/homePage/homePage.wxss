

.baseContainer {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.userAuthArea {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 200rpx;
    border-top: #DCE2EA solid 1rpx;
    border-bottom: #DCE2EA solid 1rpx;
}

.userHeaderArea {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 200rpx;
    border-top: #DCE2EA solid 1rpx;
    border-bottom: #DCE2EA solid 1rpx;
}

.userHead {
    position: relative;
    left: 30rpx;
    top: 28rpx;
    width: 144rpx;
    height: 144rpx;
}

.userInfo {
    position: relative;
    left: 69rpx;
    top: 28rpx;
    height: 144rpx;
    width: 450rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.userNameText {
    font-family: PingFang-SC-Regular;
    font-size: 40rpx;
    color: #294058;
    letter-spacing: 0px;
    line-height: 32rpx;
    width: 100%;
    height: 32rpx;
    margin-left: 0;
    margin-top: 11rpx;
}

.userStatusText {
    font-family: PingFang-SC-Regular;
    font-size: 26rpx;
    color: #294058;
    letter-spacing: 0px;
    line-height: 32rpx;
    width: 100%;
    height: 32rpx;
    margin-left: 0;
    margin-top: 11rpx;
}

.setting {
    position: absolute;
    right: 30rpx;
    top: 76rpx;
    width: 48rpx;
    height: 48rpx;
}

.loginView {
    background-color: #ff0;
}

.settingIcon {
    width: 48rpx;
    height: 48rpx;
}

.detailInfoArea {
    display: flex;
    width: 100%;
    height: 100%;
}

.tabSelectContainer {
    width: 100%;
    height: 72rpx;

    border-bottom: #DCE2EA solid 1rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.userInfoTapItem {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
}

.userInfoTapItem1 {
    font-family: PingFang-SC-Regular;
    font-size: 28rpx;
    letter-spacing: 0px;
    line-height: 28rpx;

    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.tabSelected {
    color: #3378DD;
    border-bottom: #3378DD solid 4rpx;
}

.tabNormal {
    color: #52668C;
}